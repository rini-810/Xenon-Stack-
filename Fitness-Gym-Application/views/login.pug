doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon", href="images/logo.png", type="image/x-icon")
        link(rel="stylesheet", href="css/login.css")
        script(src="javascript/cut_btn.js" defer)

        script(type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js" defer)
        script(nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js" defer)
        
        title Login | Magic Fitness Gym 

    body
        != messages('message', locals)

        .container 
            figure.logo-container
                img.logo(src="images/logo.png", alt="Magic Fitness Gym.logo")
            form.data(action="/login", method="post", autocomplete="off")
                h1 Login Portal
                div.box
                    | <ion-icon name="person-circle-outline"></ion-icon>
                    input.user-data(type="text", name="username", placeholder="Enter Username" required)
                div.box
                    | <ion-icon name="lock-closed"></ion-icon>
                    input.user-data#pass1(type="password", name="password", placeholder="Enter Password" required)

                div.btn-container
                    button.btn(type="submit") Login

                div.register
                    p.text-center Don't have an account?
                    a(href="/register").btn Sign Up

        footer#footer
            p.text-center Â© All Copyrights Reserved
            a(href="/") <span class="gymlink"> MagicFitnessGym.com - 2021</span>